&die_temp {
	status = "okay";
};

//&dma1 {
//	status = "okay";
//};

&timers2 {
	status = "okay";
	tdma: tdma {
		compatible = "st,stm32-counter";
		status = "okay";
		label = "COUNTER_2";
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Set 2KB of storage at the end of 128KB flash */
		storage_partition: partition@1f800 {
			label = "storage";
			reg = <0x0001f800 DT_SIZE_K(2)>;
		};
	};
};

&sram0 {
    reg = <0x20000000 0x8000>;
    status = "okay";
};